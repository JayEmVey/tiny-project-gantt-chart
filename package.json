{
  "name": "tiny-project-gantt-chart",
  "version": "0.1.0",
  "description": "lite version of project timeline management using the Gantt chart style",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:functional": "playwright test tests/functional.spec.ts",
    "test:ux": "playwright test tests/ux.spec.ts",
    "test:performance": "playwright test tests/performance.spec.ts",
    "test:accessibility": "playwright test tests/accessibility.spec.ts",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "fast-glob": "^3.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lru-cache": "^10.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/estree": "^1.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.8.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "overrides": {
    "glob": "^10.0.0",
    "inflight": "npm:lru-cache@^10.0.0"
  },
  "resolutions": {
    "glob": "^10.0.0",
    "inflight": "lru-cache"
  }
}
